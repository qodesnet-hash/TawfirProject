# ═══════════════════════════════════════════════════════════════════
# Django Core Settings
# ═══════════════════════════════════════════════════════════════════

# 🔑 مفتاح سري - CRITICAL
# توليد مفتاح جديد: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-immediately-min-50-chars

# 🐛 وضع التطوير (True للتطوير فقط، False في الإنتاج)
DEBUG=False

# 🌐 النطاقات المسموح بها (افصل بفاصلة)
# مثال: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ═══════════════════════════════════════════════════════════════════
# Database Configuration
# ═══════════════════════════════════════════════════════════════════

DB_NAME=tawfir_db
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-change-this
DB_HOST=localhost
DB_PORT=5432

# ═══════════════════════════════════════════════════════════════════
# CORS Settings
# ═══════════════════════════════════════════════════════════════════

# النطاقات المسموحة لـ CORS (افصل بفاصلة)
CORS_ALLOWED_ORIGINS=http://localhost:8100,capacitor://localhost,ionic://localhost

# ═══════════════════════════════════════════════════════════════════
# Twilio Configuration (SMS)
# ═══════════════════════════════════════════════════════════════════

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

